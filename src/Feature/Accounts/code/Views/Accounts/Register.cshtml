@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Sitecore.Mvc.Configuration
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Feature.Accounts.Models.RegistrationInfo

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new
{
    @class = "form-signin form-register"
}))
{
    @Html.Hidden("ReturnUrl", Model.ReturnUrl)
    @Html.AddUniqueFormId()
    <div class="form-group @Html.ValidationErrorFor(x => x.Email, "has-error")">
        @Html.LabelFor(x => x.Email, new
   {
       @class = "control-label"
   })

        @Html.TextBoxFor(x => x.Email, new
           {
               @class = "form-control",
               id = "registerEmail",
               @placeholder = @Sitecore.Globalization.Translate.Text("EnterEmail")
           })
        @Html.ValidationMessageFor(x => x.Email, "", new
           {
               @class = "help-block"
           }, "p")
    </div>

    <div class="form-group @Html.ValidationErrorFor(x => x.Password, "has-error")">
        @Html.LabelFor(x => x.Password, new
        {
            @class = "control-label"
        })


                @Html.PasswordFor(x => x.Password, new
           {
               @class = "form-control",
               id = "registerPassword",
               @placeholder = @Sitecore.Globalization.Translate.Text("EnterPassword")
           })
                @Html.ValidationMessageFor(x => x.Password, "", new
        {
            @class = "help-block"
        }, "p")
    </div>

    <div class="form-group @Html.ValidationErrorFor(x => x.ConfirmPassword, "has-error")">
        @Html.LabelFor(x => x.ConfirmPassword, new
        {
            @class = "control-label"
        })

                @Html.PasswordFor(x => x.ConfirmPassword, new
        {
            @class = "form-control",
            id = "registerConfirmPassword",
            @placeholder = @Sitecore.Globalization.Translate.Text("ConfirmPassword")
        })
                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new
        {
            @class = "help-block"
        }, "p")
    </div>
    <input type="button" onclick="register('form-register')" class="btn btn-primary btn-lg btn-block" value="@Sitecore.Globalization.Translate.Text("Register")" />
    <script src="~/Scripts/Accounts/Accounts.js"></script>
}