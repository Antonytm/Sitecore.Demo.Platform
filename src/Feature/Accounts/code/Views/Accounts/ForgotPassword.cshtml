@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@model Sitecore.Feature.Accounts.Models.PasswordResetInfo

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.Sitecore().FormHandler()
    <div class="form-group @Html.ValidationErrorFor(x => x.Email, "has-error")">
        @Html.LabelFor(x => x.Email, new
        {
            @class = "control-label"
        })

        @Html.TextBoxFor(x => x.Email, new
        {
            @class = "form-control",
            id = "registerEmail",
            @placeholder = @Sitecore.Globalization.Translate.Text("EnterEmail")
        })
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "help-block" }, "p")

    </div>

    <input type="submit" class="btn btn-primary btn-lg btn-block" value="@Sitecore.Globalization.Translate.Text("ResetPassword")" />
    <div class="help-block">@Sitecore.Globalization.Translate.Text("PasswordResetInfo")</div>
}