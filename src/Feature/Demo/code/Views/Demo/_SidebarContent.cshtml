@model Sitecore.Feature.Demo.Models.SidebarModel

<div class="panel-group" id="experiencedata">
    @if (!Model.IsActive)
    {
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="fa fa-warning"></span>
                    @Sitecore.Globalization.Translate.Text("TrackingNotActive")
                </h3>
            </div>
        </div>
    }
    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
        @Html.Partial("_Visits", Model.Visits)
        @Html.Partial("_PersonalInformation", Model.PersonalInformation)
        @Html.Partial("_OnsiteBehavior", Model.OnsiteBehavior)
        @Html.Partial("_Referral", Model.Referral)
    }
</div>
