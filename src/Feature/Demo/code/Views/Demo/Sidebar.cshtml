@model Sitecore.Feature.Demo.Models.SidebarModel

<div class="off-canvas-sidebar off-canvas-sidebar-right">
    <div class="btn-group-vertical hover" role="group">
        <button type="button" class="btn btn-info sidebar-closed" data-toggle="sidebar" title="@Sitecore.Globalization.Translate.Text("OpenVisitDetailsPanel")" data-side="right" data-role="openSidebar">
            <i class="fa fa-info-circle" aria-hidden="true"></i>
        </button>
        <button type="button" class="btn btn-info btn-lg sidebar-opened" style="display: none" data-toggle="sidebar" title="@Sitecore.Globalization.Translate.Text("CloseVisitDetailsPanel")" data-side="right" data-role="closeSidebar">
            <i class="fa fa-times" aria-hidden="true"></i>
            <span class="hover-only">@Sitecore.Globalization.Translate.Text("Close")</span>
        </button>
        <button href="#" style="display: none" class="btn btn-success refresh-sidebar sidebar-opened" title="@Sitecore.Globalization.Translate.Text("RefreshVisitDetails")">
            <i class="fa fa-refresh" aria-hidden="true"></i>
            <span class="hover-only">@Sitecore.Globalization.Translate.Text("Refresh")</span>
        </button>
        <button href="#" class="btn btn-danger end-visit sidebar-opened" style="display: none" title="@Sitecore.Globalization.Translate.Text("EndVisit")">
            <i class="fa fa-eye-slash" aria-hidden="true"></i>
            <span class="hover-only">@Sitecore.Globalization.Translate.Text("EndVisit")</span>
        </button>
    </div>

    <div class="sidebar sidebar-fixed-right">
        @if (!Sitecore.Context.PageMode.IsExperienceEditor)
        {
            @Html.Partial("_SidebarContent", Model)
        }
    </div>
</div>